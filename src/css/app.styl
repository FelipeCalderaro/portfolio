// app global css in Stylus form
// Fonts
@font-face
    font-family Arctic
    src url(./fonts/Arctic.otf)

@font-face
    font-family Arterio
    src url(./fonts/ArterioNonCommercial.otf)

@font-face
    font-family BebasNeue
    src url(./fonts/BebasNeue-Regular.ttf)

@font-face
    font-family CalderdaleLight
    src url(./fonts/CALDERDALEDEMOLight.ttf)

@font-face
    font-family CalderdaleOutline
    src url(./fonts/CALDERDALEDEMOOutline.ttf)

@font-face
    font-family CalderdaleRegular
    src url(./fonts/CALDERDALEDEMORegular.ttf) 

@font-face
    font-family Dayrom
    src url(./fonts/DAYROM__.ttf)   

@font-face
    font-family Phitton
    src url(./fonts/PhittonDemoHandwritten.ttf)

@font-face
    font-family PhittonItalic
    src url(./fonts/PhittonDemoItalic.ttf)    


.arctic-font
    font-family: 'Arctic'

.arterio-font
    font-family: 'Arterio'

.bebas-font
    font-family: 'BebasNeue'

.calderdale-light-font
    font-family: 'CalderdaleLight'

.calderdale-outline-font
    font-family: 'CalderdaleOutline'

.calderdale-regular-font
    font-family: 'CalderdaleRegular'

.dayrom-font
    font-family: 'Dayrom'

.phitton-font
    font-family: 'Phitton'
    
.phitton-italic-font
    font-family: 'PhittonItalic'

// classes de 'css'
.light-color
    background: $secondary

.header-container
    background: $primary
    width: 100%
    height: 8px

.title-color
    color: $primary

.text-color
    color: white
    position relative


.hero-text
    text-align: center
    position: absolute
    top: 40%
    left: 50%
    transform: translate(-50%, -50%);
    color: white
    
.center-img
    position absolute
    width: 100%
    height: 100%
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)

.center-img-contact
    position absolute
    width: 100%
    height: 100%
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)

.opacity-container
    position: absolute
    width: 100%
    height: 100%
    top: 50%
    left: 50%
    transform: translate(-50%, -50%);
    background: black
    opacity: 0.25

.my-card
  background-color: $primary

.row-wrap {
  display: flex;
  flex-wrap: wrap;
  padding: 0 4px;
}